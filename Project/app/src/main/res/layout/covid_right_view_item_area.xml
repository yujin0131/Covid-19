<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_areaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="지역이름"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/itemTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="확진환자"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tv_totalCase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모름"
                    android:layout_alignBaseline="@+id/itemTitle1"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/itemTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전일대비"
                    android:layout_below="@+id/itemTitle1"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tv_newCase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모름"
                    android:layout_alignBaseline="@+id/itemTitle2"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/itemTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="격리해제"
                    android:layout_below="@+id/itemTitle2"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tv_recovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모름"
                    android:layout_alignBaseline="@+id/itemTitle3"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/itemTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사망자"
                    android:layout_below="@+id/itemTitle3"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tv_death"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모름"
                    android:layout_alignBaseline="@+id/itemTitle4"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent">
        </View>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp">
    </View>

</LinearLayout>