<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#123456"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/more3"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/menu_open_drawer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코리아 자가 지킴이"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!--위에 두개-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/border"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btn_covid_info">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/covid"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코로나란"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/border"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_self_check">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:src="@drawable/self_check"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자가진단"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"/>


                </LinearLayout>


            </LinearLayout>

            <!--가운데 두개-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/border"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btn_covid">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:src="@drawable/virus4"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코로나 현황"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/border"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_msg">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/msg"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="재난문자 현황"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>


            <!--아래 두개-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/border"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btn_weather">

                    <ImageView
                        android:layout_width="63dp"
                        android:layout_height="60dp"
                        android:src="@drawable/menu_weather"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대기오염"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/border"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_mask">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/mask"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마스크"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/map_marker"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/btn_map_marker"/>

        </FrameLayout>

        <LinearLayout
            android:layout_gravity="start"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:id="@+id/drawer"
            android:background="#fff"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유진"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/drawer_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="님, 환영합니다"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="#DAE8E8E8"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:id="@+id/drawer_area">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/marker"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="서울특별시 광진구"
                    android:id="@+id/drawer_area_txt"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#DAE8E8E8"
                android:id="@+id/drawer_help">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/help"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도움말"
                    android:textSize="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_weight="2"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textSize="20dp"
                android:layout_marginTop="100dp"
                android:id="@+id/drawer_logout"/>

        </LinearLayout>


    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>